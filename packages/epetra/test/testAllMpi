#!/bin/csh
set error = 0
set AnError = False
#set printexitvalue
if( "$5" == "True" ) then # $5 is an optional parameter indicating if 
			  # this is an automated test or not
    set file2 = logMpiErrors.txt
    echo $file2
    echo "Test options: " $1 ", " $2 ", " >>& $file2
    echo "    " $3 ", " $4 >>& $file2
    echo "Date: " `eval date` >>& $file2
    echo `uname -a` >>& $file2
    set file = log`eval uname`.txt
    echo "Test options: " $1 ", " $2 ", " >>& $file
    echo "    " $3 ", " $4 >>& $file
else
    set file = log.mpi.`eval date +%d%b%Y_%H%M%S`
    rm -f $file
endif
echo $file
echo "Date: " `eval date` >>& $file
echo `uname -a` >>& $file
foreach f (BlockMap Comm CrsGraph CrsMatrix CrsRectMatrix FECrsGraph FECrsMatrix FEVbrMatrix FEVector ImportExport Map MapColoring MultiVector Object VbrMatrix Vector)
	cd $f
	if( "$5" == "True" ) then
	    gmake -f classicMakefile $1 $2 $3 $4 clobber; gmake -f classicMakefile $1 $2 $3 $4
	else
	    gmake -f classicMakefile TRILINOS_ID=LAM TRILINOS_COMM=MPI clobber; gmake -f classicMakefile TRILINOS_ID=LAM TRILINOS_COMM=MPI
	endif
	foreach g(*.exe)
		echo "############" $g "##############" >>& ../$file
		if( "$5" == "True" ) then
		    mpirun -np 8 $g >>& ../$file
		    if( "$status" != "0" ) then
			set AnError = True
			echo "############" $g "##############" >>& ../$file2
			mpirun -np 8 $g -v >>& ../$file2
		    endif
		else
		    mpirun -np 8 $g -v >>& ../$file
		endif
	end
	if( "$5" == "True" ) then
	    gmake -f classicMakefile $1 $2 $3 $4 clobber
	else
	    gmake -f classicMakefile TRILINOS_ID=LAM TRILINOS_COMM=MPI clobber
	endif
	cd ..
end
if( "$AnError" != "True" && "$5" == "True" ) then
    rm -f $file2
endif
