exe stk_learning_kokkos_utest 
  :
    [ glob $(stk_learning-root)/Kokkos/*.C ]
    /tpl/trilinos-kokkoscore//kokkoscore
    /tpl/gtest//gtest
    /sierra/stk_util//stk_util_environment
