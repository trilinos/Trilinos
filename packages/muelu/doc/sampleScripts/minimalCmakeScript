  -D Trilinos_EXTRA_REPOSITORIES="preCopyrightTrilinos" \
  -D Trilinos_ENABLE_MueLu:BOOL=ON \
  -D MueLu_ENABLE_ALL_OPTIONAL_PACKAGES:BOOL=ON \
