<ParameterList name="MueLu">

  <!-- Configuration of the Xpetra operator (fine level) -->
  <ParameterList name="Matrix">
    <Parameter name="number of equations"                   type="int" value="1"/> <!-- Number of PDE equations at each grid node.-->
  </ParameterList>

  <!-- Factory collection -->
  <ParameterList name="Factories">

    <!-- Note that ParameterLists must be defined prior to being used -->

    <!-- =======================  PART I  ======================= -->

    <ParameterList name="myTentativePFact1">
      <Parameter name="factory"                             type="string" value="SemiCoarsenPFactory_kokkos"/>
      <Parameter name="semicoarsen: coarsen rate" type="int" value="3"/>
    </ParameterList>

    <!-- =======================  PART II  ======================= -->

    <ParameterList name="UncoupledAggregationFact2">
      <Parameter name="factory"                             type="string" value="UncoupledAggregationFactory"/>
      <Parameter name="aggregation: ordering"                            type="string" value="graph"/>
      <Parameter name="aggregation: max selected neighbors"             type="int"    value="0"/>
      <Parameter name="aggregation: min agg size"           type="int"    value="9"/>
      <!--<Parameter name="aggregation: max agg size"           type="int"    value="12"/>-->
    </ParameterList>

    <ParameterList name="MyCoarseMap2">
      <Parameter name="factory"                             type="string" value="CoarseMapFactory"/>
      <Parameter name="Aggregates"                             type="string" value="UncoupledAggregationFact2"/>
    </ParameterList>


    <ParameterList name="myTentativePFact2">
      <Parameter name="factory"                             type="string" value="TentativePFactory_kokkos"/>
      <Parameter name="Aggregates"                          type="string" value="UncoupledAggregationFact2"/>
      <Parameter name="CoarseMap"                           type="string" value="MyCoarseMap2"/>
    </ParameterList>

    <!-- =======================  PART III  ======================= -->

    <ParameterList name="myTogglePFact">
      <Parameter name="factory"                             type="string" value="TogglePFactory"/>
      <Parameter name="semicoarsen: coarsen rate"           type="int" value="2"/>
      <Parameter name="semicoarsen: number of levels"       type="int" value="2"/>
      <ParameterList name="TransferFactories">
        <!-- You have to provide the names of all prolongator factories and factories which generate the coarse nullspace
             The prolongator factories have to be declared using the names "P%i" where %i is a number between 1 and 9
             The coarse nullspace factories have to be declared using the names Nullspace%i.
             The number of prolongator factories and coarse null space factories must be identical.
             The coarse nullspace is usually generated by the TentativePFactory or by a SemiCoarsenPFactory
             The factory for the coarse null space and the prolongator might be different (e.g. P may be a SaPFactory,
             but the coarse null space is generated by the TenativePFactory!) -->
        <Parameter name="P1"                type="string" value="myTentativePFact1"/>
        <Parameter name="P2"                type="string" value="myTentativePFact2"/>
        <Parameter name="Ptent1"            type="string" value="myTentativePFact1"/>
        <Parameter name="Ptent2"            type="string" value="myTentativePFact2"/>
        <Parameter name="Nullspace1"        type="string" value="myTentativePFact1"/>
        <Parameter name="Nullspace2"        type="string" value="myTentativePFact2"/>
      </ParameterList>
    </ParameterList>

    <!-- =======================  SMOOTHERS  ======================= -->

    <ParameterList name="myJacobi">
      <Parameter name="factory"                             type="string" value="TrilinosSmoother"/>
      <Parameter name="type"                                type="string" value="RELAXATION"/>
      <ParameterList name="ParameterList">
        <Parameter name="relaxation: type"                  type="string" value="Jacobi"/>
        <Parameter name="relaxation: sweeps"                type="int"    value="1"/>
        <Parameter name="relaxation: damping factor"        type="double" value="0.9"/>
      </ParameterList>
    </ParameterList>

  </ParameterList>

  <!-- Definition of the multigrid preconditioner -->
  <ParameterList name="Hierarchy">

    <Parameter name="max levels"                            type="int"      value="8"/> <!-- Max number of levels -->
    <Parameter name="coarse: max size"                      type="int"      value="10"/> <!-- Min number of rows on coarsest level -->
    <Parameter name="verbosity"                             type="string"   value="High"/>
    <Parameter name="use kokkos refactor"                   type="bool"     value="true"/>

    <ParameterList name="All">
      <Parameter name="Smoother"                            type="string"   value="myJacobi"/>

      <Parameter name="P"                                   type="string"   value="myTogglePFact"/> <!-- TogglePFact provides the prolongator from the generating factories -->
      <Parameter name="Nullspace"                           type="string"   value="myTogglePFact"/> <!-- TogglePFact provides the coarse null space from the generating factories -->
      <Parameter name="CoarseSolver"                        type="string"   value="DirectSolver"/>
    </ParameterList>

  </ParameterList>
</ParameterList>
