#!/bin/csh

#-----------------------------------------------------------------------------
# Quick and dirty build for unit testing with Host (serial) and TPI devices.
# To be replace with CMake integration.

set INC_PATH="-I. -I../src"

set GCC_SOURCES="../src/impl/*.cpp ../src/DeviceHost/*.cpp UnitTestMain.cpp"

set LIB=""

#-----------------------------------------------------------------------------
# Stub out TPI unit tests

set GCC_SOURCES="${GCC_SOURCES} UnitTestTPIStub.cpp"

#-----------------------------------------------------------------------------

# /usr/local/cuda/bin/nvcc -arch=sm_20 --keep

/usr/local/cuda/bin/nvcc -arch=sm_20 ${INC_PATH} -lib -o libCuda.a \
       ../src/DeviceCuda/*.cu UnitTestCuda.cu

set LIB="${LIB} -L/usr/local/cuda/lib64 libCuda.a -lcudart -lcuda"

#-----------------------------------------------------------------------------

echo "#define HAVE_PTHREAD" > ThreadPool_config.h

set GCC_FLAGS="-Wall -Werror -g ${INC_PATH}"

g++ $GCC_FLAGS -c ${GCC_SOURCES}

g++ $GCC_FLAGS -o unit_test.exe *.o ${LIB}

rm -f *.o *.a ThreadPool_config.h

#-----------------------------------------------------------------------------


