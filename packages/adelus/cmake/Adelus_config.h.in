#ifndef ADELUS_CONFIG_H
#define ADELUS_CONFIG_H

/* Define if you want to build export makefiles. */
#cmakedefine HAVE_EXPORT_MAKEFILES

/* Define if you are using gnumake - this will shorten your link lines. */
#cmakedefine HAVE_GNUMAKE

/* Define if want to build with kokkoskernels enabled */
#cmakedefine HAVE_HAVE_KOKKOSKERNELS

/* Define if want to build libcheck */
#cmakedefine HAVE_LIBCHECK

/* define if we want to use MPI */
#cmakedefine HAVE_MPI

/* Define if want to build adelus-tests */
#cmakedefine HAVE_ADELUS_TESTS

/* Define to 1 if you have the <string> header file. */
#cmakedefine HAVE_STRING

/* Define to 1 if you have the <strings.h> header file. */
#cmakedefine HAVE_STRINGS_H

/* Define to 1 if you have the <string.h> header file. */
#cmakedefine HAVE_STRING_H

/* Define if want to build tests */
#cmakedefine HAVE_TESTS

/* Define to `__inline__' or `__inline' if that's what the C compiler
   calls it, or to nothing if 'inline' is not supported under any name.  */
#ifndef __cplusplus
#cmakedefine inline
#endif

/* Define to rpl_malloc if the replacement function should be used. */
#cmakedefine malloc

/* Whether to enable double precision complex functionality */
#cmakedefine ZCPLX

/* Whether to enable single precision complex functionality */
#cmakedefine SCPLX

/* Whether to enable double precision functionality */
#cmakedefine DREAL

/* Whether to enable single precision functionality */
#cmakedefine SREAL

/* Whether to enable timing */
#cmakedefine GET_TIMING

/* Whether to use Cuda/HIP Host Pinned memory for MPI */
#cmakedefine ADELUS_HOST_PINNED_MEM_MPI

/* Whether to use Kokkos::deep_copy for BLAS copy */
#cmakedefine USE_DEEPCOPY

/* Whether to enable status prints */
#cmakedefine PRINT_STATUS

/* Whether to have time monitor */
#cmakedefine ADELUS_HAVE_TIME_MONITOR

#endif // ADELUS_CONFIG_H
