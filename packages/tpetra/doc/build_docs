#!/bin/sh

if [ $TRILINOS_HOME ]; then
  echo "TRILINOS_HOME has already been set!"
else
  echo "TRILINOS_HOME has not been set.  Setting it!"
  export TRILINOS_HOME=`pwd`/../../..
fi

echo
echo "Generating main tpetra doxygen documentation ..."
echo

doxygen Doxyfile

gplotVersion=`gnuplot --version | cut -f2 -d " " | cut -f1 -d "."`
if [ $gplotVersion -lt 4 ]
then
echo "You must have gunplot version 4 or greater to build the MatrixMatrix Report."
else
pushd MatrixMatrixReport
make
popd
fi
