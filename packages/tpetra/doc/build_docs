#!/bin/bash

if [ $TRILINOS_HOME ]; then
  echo "TRILINOS_HOME has already been set!"
else
  echo "TRILINOS_HOME has not been set.  Setting it!"
  export TRILINOS_HOME=`pwd`/../../..
fi

echo
echo "Generating main tpetra doxygen documentation ..."
echo

doxygen DoxyfileWeb

echo
echo "Generating tpetra/thyra doxygen documentation ..."
echo

#doxygen ../thyra/doc/Doxyfile

echo
echo "Generating doxygen browser documentation for all of tpetra ..."
echo

doxygen ../browser/doc/Doxyfile
