# test_nem - nemesis routines
echo "test_nem ..."
${PREFIX} ${BINDIR}/f_test_nem${SUFFIX} | ${DIFF} -w - ${SRCDIR}/test_nem.dmp | tee test_nem.res

echo "************************************************************************"
echo "************************************************************************"

