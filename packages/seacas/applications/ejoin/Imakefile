CXXEXTRA_DEFINES = -I$(INCDIR)/ioss
CODE = ejoin

#if defined(CrossLinuxArchitecture)
CXXSTD_DEFINES = -Dlinux -D__alpha__ -DADDC_ $(CXXPROJECT_DEFINES)
#endif

#if defined SGIArchitecture
CXXEXTRA_DEFINES = -LANG:std
LOCAL_LDFLAGS = -LANG:std
#endif

LIBS = $(IOSS) $(NEMESIS) $(EXODUS) $(NETCDF) -lm

SRCS =	EJoin.C adler.C GetLongOpt.C smart_assert.C SystemInterface.C to_string.C add_to_log.C \
	match_xyz.C index_sort.C Vector3.C tokenize.C mapping.C

OBJS = $(SRCS:.C=.o)

NormalCCTarget($(CODE),$(OBJS),NullParameter,NullParameter,$(LIBS))

InstallNamedTarget(install,$(CODE),NullParameter,$(BINDIR),$(CODE))

DependTarget()
