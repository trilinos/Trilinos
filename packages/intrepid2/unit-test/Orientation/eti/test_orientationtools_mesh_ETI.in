/** \file test_01.cpp
    \brief  Unit tests for Orientation class.
    \author Created by Kyungjoo Kim
*/

#include "Kokkos_Core.hpp"

#include "test_orientationtools_tri_mesh.hpp"
#include "test_orientationtools_quad_mesh.hpp"
#include "test_orientationtools_hex_mesh.hpp"

int main(int argc, char *argv[]) {

  const bool verbose = (argc-1) > 0;
  Kokkos::initialize();
  
  int r_val = 0;

  r_val += Intrepid2::Test::OrientationToolsTriMesh<@ETI_DEVICE@>(verbose);
  r_val += Intrepid2::Test::OrientationToolsQuadMesh<@ETI_DEVICE@>(verbose);
  r_val += Intrepid2::Test::OrientationToolsHexMesh<@ETI_DEVICE@>(verbose);

  Kokkos::finalize();
  return r_val;
}

