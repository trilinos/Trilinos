BOOK_SRCS = loca_book.tex \
	    loca_chap1.tex \
            loca_chap2.tex \
	    loca_chap3.tex \
            loca_chap4.tex \
	    loca_chap5.tex \
	    loca_chap6.tex \
	    loca_ack.tex \
            loca.bib

doc: loca_book.pdf manual_html

loca_book.dvi: $(BOOK_SRCS)
	latex loca_book && \
	bibtex loca_book && \
	latex loca_book && \
	latex loca_book

loca_book.ps: loca_book.dvi
	dvips -P pdf -o loca_book.ps loca_book.dvi

loca_book.pdf: loca_book.ps
	ps2pdf loca_book.ps

manual_html:
	latex2html loca_book -up_url '../../../../../doc/html/index.html' -up_title 'NOX/LOCA Documentation'; touch manual_html

clean:
	rm -rf *.ps *.pdf *.dvi *.aux *.toc *.log *.bbl *.blg loca_book
