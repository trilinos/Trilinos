##############################################################################
#  Environment variables for compiling the Zoltan and test drivers for
#  Sandia's Dec Cluster.
#  For explanations of these variables, please see Makefile.generic.
##############################################################################

DEFS 			= 

RANLIB			= ranlib
AR			= ar r

CC          		= cc
INCLUDE_PATH		= -I/usr/include
DBG_FLAGS		= -g
OPT_FLAGS		= -O
CFLAGS = $(DBG_FLAGS)

F90			= f90
LOCAL_F90		= f90
F90CFLAGS               = -DFMANGLE=UNDERSCORE -DNO_MPI2 
FFLAGS                  = -g
SPPR_HEAD               = spprinc.64bit
F90_MODULE_PREFIX       = -I
FARG                    = farg_typical

MPI_LIB			= -lmpi
MPI_LIBPATH		= -L/usr/lib

PARMETIS_LIBPATH 	= -L../../ParMETIS2
PARMETIS_INCPATH 	= -I../../ParMETIS2

#JOSTLE_LIBPATH 	= -L/Net/local/proj/zoltan/arch/alpha/lib
#JOSTLE_INCPATH 	= -I/Net/local/proj/zoltan/arch/all/src
#JOSTLE_SRCPATH 	= /Net/local/proj/zoltan/arch/all/src

NEMESIS_LIBPATH		= -L/projects/seacas/current/lib
NEMESIS_INCPATH		= -I/projects/seacas/current/inc
