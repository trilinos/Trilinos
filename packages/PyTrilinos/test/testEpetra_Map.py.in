        self.assertEqual(self.map3.NumGlobalElements(), self.numGlobalEl     )

    def testNumMyElements(self):
        "Test Epetra.Map NumMyElements method"
        self.assertEqual(self.map1.NumMyElements(), self.numMyElConst)
