             "gnu9/9.3.0 $BASE_MODULE_LIST $ARM_GCC_BUILD_LIST g++ $GCC_WARNING_FLAGS"
             "arm/20.1 $BASE_MODULE_LIST $ARM_GCC_BUILD_LIST armclang++ $ARMCLANG_WARNING_FLAGS")

  if [ -z "$ARCH_FLAG" ]; then
    ARCH_FLAG="--arch=ARMV8_THUNDERX2"
  fi

  SPACK_HOST_ARCH="+armv8_tx2"
elif [ "$MACHINE" = "caraway" ]; then
  SKIP_HWLOC=True
  # BUILD_ONLY=True
  # report_and_log_test_result: only testing compilation of code for now,
  #   output description and success based only on build succes; build time output (no run-time)

