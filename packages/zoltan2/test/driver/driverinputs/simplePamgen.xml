<!-- 2D Simple, Pamgen input -->

<ParameterList name="simplePamgen">
  
  <ParameterList name="InputParameters">
    <Parameter name="file type" type="string" value="Pamgen"/>
    <Parameter name="input file" type="string" value="simple"/>
    <Parameter name="input path" type="string" value="driverinputs"/>
  </ParameterList>

  <!--************************-->
  <!-- Compare input adapters -->
  <!--************************-->

  <!-- Multijagged with BasicVectorAdapter, stride 1 -->
  <ParameterList name="mjBVA1">
    <Parameter name="kind" type="string" value="partitioning"/>
    <ParameterList name="InputAdapterParameters">
      <Parameter name="data type" type="string" value="coordinates"/>
      <Parameter name="input adapter" type="string" value="BasicVector"/>
      <Parameter name="stride" type="int" value="1"/>
    </ParameterList>
    
    <ParameterList name="Zoltan2Parameters">
      <Parameter name="num_global_parts" type="string" value="7"/>
      <Parameter name="algorithm" type="string" value="multijagged"/>
      <!--<Parameter name="compute_metrics" type="bool" value="true"/>-->
    </ParameterList>

    <ParameterList name="Metrics">
      <ParameterList name="metriccheck1">
         <Parameter name="check" type="string" value="imbalance"/>
         <Parameter name="lower" type="double" value="1."/>
         <Parameter name="upper" type="double" value="1.14"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>

  <!-- Multijagged with BasicVectorAdapter, stride 2 -->
  <ParameterList name="mjBVA2">
    <Parameter name="kind" type="string" value="partitioning"/>
    <ParameterList name="InputAdapterParameters">
      <Parameter name="data type" type="string" value="coordinates"/>
      <Parameter name="input adapter" type="string" value="BasicVector"/>
      <Parameter name="stride" type="int" value="2"/>
    </ParameterList>
    
    <ParameterList name="Zoltan2Parameters">
      <Parameter name="num_global_parts" type="string" value="7"/>
      <Parameter name="algorithm" type="string" value="multijagged"/>
      <!--<Parameter name="compute_metrics" type="bool" value="true"/>-->
    </ParameterList>
    
    <ParameterList name="Metrics">
      <ParameterList name="metriccheck1">
         <Parameter name="check" type="string" value="imbalance"/>
         <Parameter name="lower" type="double" value="1."/>
         <Parameter name="upper" type="double" value="1.14"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>

  <!-- Multijagged with XpetraMultiVectorAdapter -->
  <ParameterList name="mjMVA">
    <Parameter name="kind" type="string" value="partitioning"/>
    <ParameterList name="InputAdapterParameters">
      <Parameter name="data type" type="string" value="coordinates"/>
      <Parameter name="input adapter" type="string" value="XpetraMultiVector"/>
    </ParameterList>
    
    <ParameterList name="Zoltan2Parameters">
      <Parameter name="num_global_parts" type="string" value="7"/>
      <Parameter name="algorithm" type="string" value="multijagged"/>
    </ParameterList>
    
    <ParameterList name="Metrics">
      <ParameterList name="metriccheck1">
         <Parameter name="check" type="string" value="imbalance"/>
         <Parameter name="lower" type="double" value="1."/>
         <Parameter name="upper" type="double" value="1.14"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>

  <!-- Multijagged with XpetraMultiVectorAdapter and alternate migration -->
  <ParameterList name="mjMVAmig">
    <Parameter name="kind" type="string" value="partitioning"/>
    <ParameterList name="InputAdapterParameters">
      <Parameter name="data type" type="string" value="coordinates"/>
      <Parameter name="input adapter" type="string" value="XpetraMultiVector"/>
    </ParameterList>
    
    <ParameterList name="Zoltan2Parameters">
      <Parameter name="num_global_parts" type="string" value="7"/>
      <Parameter name="algorithm" type="string" value="multijagged"/>
      <Parameter name="mj_migration_type" type="int" value="1"/>
    </ParameterList>
    
    <ParameterList name="Metrics">
      <ParameterList name="metriccheck1">
         <Parameter name="check" type="string" value="imbalance"/>
         <Parameter name="lower" type="double" value="1."/>
         <Parameter name="upper" type="double" value="1.14"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>

  <!-- Multijagged with PamgenMeshAdapter -->
  <ParameterList name="mjPMA">
    <Parameter name="kind" type="string" value="partitioning"/>
    <ParameterList name="InputAdapterParameters">
      <Parameter name="data type" type="string" value="coordinates"/>
      <Parameter name="input adapter" type="string" value="PamgenMesh"/>
    </ParameterList>
    
    <ParameterList name="Zoltan2Parameters">
      <Parameter name="num_global_parts" type="string" value="7"/>
      <Parameter name="algorithm" type="string" value="multijagged"/>
      <!--<Parameter name="compute_metrics" type="bool" value="true"/>-->
    </ParameterList>
    
    <ParameterList name="Metrics">
      <ParameterList name="metriccheck1">
         <Parameter name="check" type="string" value="imbalance"/>
         <Parameter name="lower" type="double" value="1."/>
         <Parameter name="upper" type="double" value="1.14"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>

  <!-- Hypergraph with XpetraCrsMatrixAdapter -->
  <ParameterList name="phgCRSA">
    <Parameter name="kind" type="string" value="partitioning"/>
    <ParameterList name="InputAdapterParameters">
      <Parameter name="data type" type="string" value="tpetra_crs_matrix"/>
      <Parameter name="input adapter" type="string" value="XpetraCrsMatrix"/>
    </ParameterList>
    
    <ParameterList name="Zoltan2Parameters">
      <Parameter name="num_global_parts" type="string" value="7"/>
      <Parameter name="algorithm" type="string" value="zoltan"/>
      <!--<Parameter name="compute_metrics" type="bool" value="true"/>-->
      <ParameterList name="zoltan_parameters">
        <Parameter name="lb_method" type="string" value="phg"/>
        <Parameter name="lb_approach" type="string" value="partition"/>
      </ParameterList>
    </ParameterList>
    
    <ParameterList name="Metrics">
      <ParameterList name="metriccheck1">
         <Parameter name="check" type="string" value="imbalance"/>
         <Parameter name="lower" type="double" value="1."/>
         <Parameter name="upper" type="double" value="1.14"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>

  <!-- hypergraph with PamgenMeshAdapter -->
  <ParameterList name="phgPMA">
    <Parameter name="kind" type="string" value="partitioning"/>
    <ParameterList name="InputAdapterParameters">
      <Parameter name="data type" type="string" value="tpetra_crs_matrix"/>
      <Parameter name="input adapter" type="string" value="PamgenMesh"/>
    </ParameterList>
    
    <ParameterList name="Zoltan2Parameters">
      <Parameter name="num_global_parts" type="string" value="7"/>
      <Parameter name="algorithm" type="string" value="zoltan"/>
      <!--<Parameter name="compute_metrics" type="bool" value="true"/>-->
      <ParameterList name="zoltan_parameters">
        <Parameter name="lb_method" type="string" value="phg"/>
        <Parameter name="lb_approach" type="string" value="partition"/>
      </ParameterList>
    </ParameterList>
    
    <ParameterList name="Metrics">
      <ParameterList name="metriccheck1">
         <Parameter name="check" type="string" value="imbalance"/>
         <Parameter name="lower" type="double" value="1."/>
         <Parameter name="upper" type="double" value="1.14"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>
  
  <!-- Comparisons -->

  <ParameterList name="Comparison">
    <Parameter name="A" type="string" value="mjBVA1"/>
    <Parameter name="B" type="string" value="mjBVA2"/>
  </ParameterList>

  <ParameterList name="Comparison">
    <Parameter name="A" type="string" value="mjBVA1"/>
    <Parameter name="B" type="string" value="mjMVA"/>
  </ParameterList>

  <ParameterList name="Comparison">
    <Parameter name="A" type="string" value="mjBVA1"/>
    <Parameter name="B" type="string" value="mjPMA"/>
  </ParameterList>

  <ParameterList name="Comparison">
    <Parameter name="A" type="string" value="mjMVA"/>
    <Parameter name="B" type="string" value="mjMVAmig"/>
  </ParameterList>


</ParameterList>
